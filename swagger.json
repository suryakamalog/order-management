{
  "swagger": "2.0",
  "info": {
    "title": "Order Management API",
    "version": "1.0.0"
  },
  "paths": {
    "/quote/{product_id}": {
      "get": {
        "summary": "Get a price quote for a product",
        "parameters": [
          {
            "in": "path",
            "name": "product_id",
            "required": true,
            "type": "integer",
            "description": "The product ID"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "price": {
                      "type": "number",
                      "description": "The product price"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders": {
      "post": {
        "summary": "Create a new order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "product_id": {
                    "type": "integer",
                    "description": "The product ID"
                  },
                  "customer_id": {
                    "type": "string",
                    "description": "The customer ID"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "order_id": {
                      "type": "string",
                      "description": "The order ID"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
